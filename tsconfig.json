{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "outDir": "./scripts",
    },
    "lib": [
        "es6"
    ],
    "include": [
        "src/scripts/*",
    ],
}